<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center;">Create a New Campground</h1>

	<div style="width: 35%; margin: 25px auto; min-width: 300px">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<label for="campground[name]">Name</label>
				<input class="form-control" type="text" name="campground[name]" placeholder="Yosemite National Park">
			</div>
			<div class="form-group">
				<label for="campground[location]">Location</label>
				<input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA">
			</div>
			<div class="form-group">
				<label for="campground[cost]">Cost</label>
				<input class="form-control" type="number" name="campground[cost]" placeholder="9.99" min="0.01" step="0.01" required>
			</div>
			<div class="form-group">
				<label for="campground[image]">Image Url</label>
				<input class="form-control" type="text" name="campground[image]" placeholder="https://www.exampleimage.com">
			</div>
			<div class="form-group">
				<label for="campground[description]">Description</label>
				<input class="form-control" type="text" name="campground[description]" placeholder="Californiaâ€™s Sierra Nevada mountains.">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
	</form>
	
	<a href="/campgrounds">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>