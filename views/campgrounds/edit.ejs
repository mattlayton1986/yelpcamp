<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center;">Edit <%= campground.name %></h1>

	<div style="width: 35%; margin: 25px auto; min-width: 300px">
		<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="campground[name]">Name</label>
				<input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<label for="campground[location]">Location</label>
				<input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
			</div>
			<div class="form-group">
				<label for="campground[cost]">Cost</label>
				<input class="form-control" type="number" name="campground[cost]" id="cost" value="<%= campground.cost %>" min="0.01" step="0.01" required>
			</div>
			<div class="form-group">
				<label for="campground[image]">Image Url</label>
				<input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<label for="campground[description]">Description</label>
				<input class="form-control" type="text" name="campground[description]" id="description" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
	</form>
	
	<a href="/campgrounds">Go Back</a>
	</div>
</div>


<% include ../partials/footer %>